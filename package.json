{
  "name": "coffeekraken-sugar",
  "description": "A little sugar in your codebase",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "dist": "m -rf dist npm run dist.js && npm run dist.components.scss && npm run dist.webcomponents.scss",
    "dist.js": "babel src -d dist",
    "dist.components.scss": "copyfiles -u 2 './src/components/**/*.scss' ./dist/components",
    "dist.webcomponents.scss": "copyfiles -u 2 './src/webcomponents/**/*.scss' ./dist/webcomponents",
    "dist.watch": "concurrently --kill-others \"npm run dist.watch.js\"",
    "dist.watch.js": "nodemon -w src -e js -x \"npm run dist\"",
    "demo": "npm run demo && open ./demo/index.html",
    "demo": "concurrently --kill-others \"npm run demo.css\" \"npm run demo.js\"",
    "demo.css": "node-sass demo/src/sass/style.scss demo/dist/css/style.css",
    "demo.js": "npm run dist.js && webpack",
    "demo.watch": "concurrently --kill-others \"npm run demo.watch.css\" \"npm run demo.watch.css\"",
    "demo.watch.css": "nodemon -w demo/src -w src -e scss -x \"npm run demo.css\"",
    "demo.watch.js": "nodemon -w demo/src -w src -e js -x \"npm run demo.js\"",
    "install": "./scripts/install.sh",
    "doc": "rm -rf doc/src && npm run doc.scss && npm run doc.js",
    "doc.scss": "coffeekraken-docblock-to-markdown -s 'src/**/*.scss' -d doc",
    "doc.js": "coffeekraken-docblock-to-markdown -s 'src/**/*.js' -d doc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:coffeekraken/sugar.git"
  },
  "author": "Olivier Bossel <olivier.bossel@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "custom-event": "^1.0.0",
    "fastdom": "^1.0.5",
    "form-serialize": "^0.7.1",
    "google-maps": "^3.2.1",
    "in-view": "^0.6.1",
    "in-viewport": "^3.4.2",
    "javascript-detect-element-resize": "^0.5.3",
    "js-cookie": "^2.1.3",
    "lodash": "^4.15.0",
    "modularscale-sass": "^2.1.1",
    "morphdom": "^2.1.2",
    "nouislider": "^8.5.1",
    "rxjs": "^5.0.0-beta.10",
    "sharer.npm.js": "0.0.10",
    "simple-ajax": "^2.6.0",
    "tocca": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.16.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-dataset": "git+https://github.com/ryanbahniuk/babel-plugin-dataset.git",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-proto-to-assign": "^6.5.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "coffeekraken-docblock-to-markdown": "git+https://github.com/Coffeekraken/docblock-to-markdown.git#release/0.0.1",
    "copyfiles": "^1.0.0",
    "gridle": "https://github.com/olivierbossel/gridle.git#alpadia",
    "node-sass": "^3.4.2",
    "nodemon": "^1.11.0",
    "sassyjson": "^1.1.8",
    "vinyl-named": "^1.1.0",
    "webpack": "^1.13.3"
  }
}
